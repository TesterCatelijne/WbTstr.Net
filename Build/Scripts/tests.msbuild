<Project DefaultTargets="Test" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <UsingTask AssemblyFile="..\..\packages\xunit.1.9.2\lib\net20\xunit.runner.msbuild.dll" TaskName="Xunit.Runner.MSBuild.xunit"/>

  <Target Name="Test">
	<MakeDir Directories="test-reports" />
	
    <xunit 	Assembly="..\..\FluentAutomation.Tests\bin\Debug\FluentAutomation.Tests.dll" 
			Xml="test-reports\$(AssemblyName).xunit.xml" 
			ContinueOnError="true">
      <Output TaskParameter="ExitCode" ItemName="XUnitExitCodes"/>
    </xunit>
	
	<XslTransformation XmlInputPaths="test-reports\$(AssemblyName).xunit.xml" 
					   XslInputPath="NUnitXml.xslt" 
					   OutputPaths="test-reports\$(AssemblyName).NUnit.xml"/>
	
  </Target>
</Project>